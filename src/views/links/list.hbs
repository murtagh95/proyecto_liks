<div class="conteiner p-4">
    <div class="row">

        {{!-- Recorro el array devuelto x la DB --}}
        {{#each links}}
            
            <div class="col-md-3 mt-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_bank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2 p-5"> {{description}} </p>
                        <p class="m-2 p-1"> {{ timeago created_at }} </p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{!-- Si no encuentra ningun elemento en el array --}}
        {{else}}
        
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There aren't links saved yet.</p>
                    <a href="/links/add" class="btn btn-success btn-block">Create One!</a>
                </div>
            </div>


        {{/each}}

    </div>
</div>