<div class="conteiner p-4">
    <div class="row">

        {{!-- Recorro el array devuelto x la DB --}}
        {{#each links}}
            
            <div class="col-md-3 mt-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_bank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2 p-5"> {{description}} </p>
                        <p class="m-2 p-1"> {{ timeago created_at }} </p>
                        <a href="" class="btn btn-danger">Delete Link</a>
                        <a href="" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>

        {{/each}}

    </div>
</div>